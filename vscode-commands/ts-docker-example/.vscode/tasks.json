{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [],
			"label": "npm:build",
			"detail": "npm run clean && tsc"
		},
		{
			"type": "docker-build",
			"label": "docker:build:dev",
			"platform": "node",
			"group": {
				"kind": "build",
			},
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"target": "development",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-build",
			"label": "docker:build:prod",
			"platform": "node",
			"group": {
				"kind": "build",
			},
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"target": "production",
				"context": "${workspaceFolder}",
				"pull": true
			}
		}
	]
}